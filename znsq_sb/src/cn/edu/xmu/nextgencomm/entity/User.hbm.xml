<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE hibernate-mapping PUBLIC 
    "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
    "http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">
<hibernate-mapping>
	<class name="cn.edu.xmu.nextgencomm.entity.User" table="user">
		<id name="id" column="userId" type="int">
			<generator class="increment"/>
		</id>
		<property name="username" type="string" length="16"/>
		<property name="password" type="string" length="12"/>
		<property name="roleId" type="int" length="10"/>
		<property name="name" type="string" length="20"/>
		<property name="sex" type="string" length="5"/>
		<property name="age" type="int" length="5"/>
		<property name="phone" type="string" length="20"/>
		<property name="email" type="string" length="30"/>
	</class>
</hibernate-mapping>